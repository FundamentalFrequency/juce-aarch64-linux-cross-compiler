# determine the action and the folder, "$@" then contains only the files
action=$1; shift;
folder=$1; shift;

# check the action
case $action in
create)
	exec xarchiver --compress="$@"
	;;

extract-here)
	cd "$folder"
	exec xarchiver --ensure-directory "$@"
	;;

extract-to)
	exec xarchiver --extract "$@"
	;;

*)
	echo "Unsupported action '$action'" >&2
	exit 1
esac
